<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.yifan.geekgen.mapper.ChatMessageMapper">

    <insert id="insert"
            parameterType="cn.yifan.geekgen.pojo.entity.ChatMessage"
            useGeneratedKeys="true"
            keyProperty="id"
    >
        INSERT INTO chat_message (role, content, tokens, user_id)
        VALUES (#{role}, #{content}, #{tokens}, #{userId})
    </insert>

    <update id="update"
            parameterType="cn.yifan.geekgen.pojo.entity.ChatMessage"
    >
        UPDATE chat_message
        <set>
            <if test="tokens != null">
                tokens = #{tokens},
            </if>
        </set>
        WHERE id = #{id}
    </update>

</mapper>